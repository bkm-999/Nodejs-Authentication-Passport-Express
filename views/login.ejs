<div class="signup-form">
  <% include ./partials/messages %>
  <form action="/users/login" method="POST">
    <h2>Login</h2>
    <p class="hint-text">Please Login here.</p>
    <div class="form-group">
      <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email" />
    </div>
    <div class="form-group">
      <input type="password" id="password" name="password" class="form-control" placeholder="Enter Password" />
    </div>
    <div class="form-group">
      <label class="form-check-label"><input type="checkbox" required="required"> I accept the <a href="#">Terms of
          Use</a> &amp; <a href="#">Privacy Policy</a></label>
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-success btn-lg btn-block">Login</button>
    </div>
  </form>
  <div class="text-center">Do not have an account? <a href="/users/register">Sign Up</a></div>
</div>